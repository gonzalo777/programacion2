#include "stdafx.h"
#include <iostream>
#include "conio.h"

using namespace std;
void main ()
{
	int n,suma,i,cont;
	cout<<"ingresar el n numero: ";
	cin>>n;
	suma=0;
	cont=1;
	i=1;
	while (i<=n)
	{
		suma=suma+cont;
		cont=cont+2;
		i=i+1;
	}
	cout<<"la suma de los primeros "<<n<<" numeros impares es:  "<<suma;
	getch();
}



